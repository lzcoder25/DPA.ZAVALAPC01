CREATE DATABASE ReservasDeportivas;
GO

USE ReservasDeportivas;

CREATE TABLE Canchas (
    Id INT IDENTITY(1,1) PRIMARY KEY,
    Nombre NVARCHAR(100) NOT NULL,
    Tipo NVARCHAR(50) NOT NULL,
    Ubicacion NVARCHAR(150) NOT NULL
);

CREATE TABLE Reservas (
    Id INT IDENTITY(1,1) PRIMARY KEY,
    Fecha DATE NOT NULL,
    HoraInicio TIME NOT NULL,
    HoraFin TIME NOT NULL,
    ClienteNombre NVARCHAR(100) NOT NULL,
    CanchaId INT NOT NULL,
    FOREIGN KEY (CanchaId) REFERENCES Canchas(Id)
);


CREATE NONCLUSTERED INDEX IX_Reservas_Fecha_CanchaId ON Reservas (Fecha, CanchaId);

CREATE NONCLUSTERED INDEX IX_Canchas_Tipo_Ubicacion ON Canchas (Tipo, Ubicacion);
